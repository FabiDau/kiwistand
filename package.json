{
  "name": "goblin",
  "version": "0.0.1",
  "description": "goblin is the p2p node client for goblin.exchange, a web3 writer friendly Hacker News that nobody controls but everybody co-owns",
  "main": "./src/index.mjs",
  "scripts": {
    "test": "ava --timeout=20s --serial --verbose",
    "dev": "DEBUG=attestate* node -r dotenv/config --no-warnings ./src/launch.mjs",
    "dev:bootstrap": "DATA_DIR=bootstrap BIND_ADDRESS_V4=\"127.0.0.1\" IS_BOOTSTRAP_NODE=true USE_EPHEMERAL_ID=false npm run dev",
    "dev:anon": "DATA_DIR=anon BIND_ADDRESS_V4=\"127.0.0.1\" PORT=0 IS_BOOTSTRAP_NODE=false USE_EPHEMERAL_ID=true npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/rugpullindex/rugpulld.git"
  },
  "keywords": [
    "rugpull",
    "data",
    "tokens",
    "layer2",
    "blockchain",
    "ethereum",
    "p2p"
  ],
  "engines": {
    "node": ">=16"
  },
  "author": "The Goblin Exchange Developers",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/attestate/golbin/issues"
  },
  "homepage": "https://github.com/attestate/goblin#readme",
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "5.2.1",
    "@chainsafe/libp2p-noise": "10.2.0",
    "@ethereumjs/rlp": "4.0.1",
    "@ethereumjs/trie": "5.0.4",
    "@libp2p/bootstrap": "5.0.0",
    "@libp2p/mplex": "7.1.0",
    "@libp2p/peer-id": "1.1.16",
    "@libp2p/pubsub-peer-discovery": "8.0.0",
    "@libp2p/tcp": "6.0.4",
    "ajv": "8.12.0",
    "ajv-formats": "2.1.1",
    "canonicalize": "1.0.8",
    "debug": "4.3.4",
    "dotenv": "16.0.3",
    "ethereum-cryptography": "1.1.2",
    "ethers": "5.7.2",
    "fastify": "4.14.0",
    "it-all": "2.0.0",
    "it-length-prefixed": "8.0.4",
    "it-map": "2.0.0",
    "libp2p": "0.40.0",
    "lmdb": "2.7.9",
    "uint8arrays": "4.0.3"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "esmock": "1.7.2"
  },
  "ava": {
    "files": [
      "**/*_test.mjs"
    ],
    "environmentArguments": {
      "DEBUG": "attestate*"
    },
    "nodeArguments": [
      "--loader=esmock",
      "--no-warnings"
    ],
    "require": [
      "dotenv/config"
    ]
  }
}
